<header>
  <nav style="background: #000; color: white;">
    <h1 id="{{purchaser}}" class="{{idC}}" style="margin-left: 20px;">Carrito</h1>
  </nav>
</header>
<table style="width: 100%; margin-top: 50px;">
  <thead>
    <tr>
      <th></th>
      <th style="font-weight: 700;">Titulo</th>
      <th style="font-weight: 700;">Code</th>
      <th style="font-weight: 700;">Category</th>
      <th style="font-weight: 700;">Cantidad</th>
      <th style="font-weight: 700;">Price</th>
    </tr>
  </thead>
  <tbody>
    {{#each productos}}
      <tr>
        <td><img
            src="{{this.thumbnail}}"
            alt="{{this.title}}"
            class="product-image"
          /></td>
        <td>{{this.title}}</td>
        <td>{{this.code}}</td>
        <td>{{this.category}}</td>
        <td>{{this.quantity}}</td>
        <td>${{this.price}}</td>
        <td><button
            class="products"
            id="{{this._id}}"
            style="border: none; background: red; padding: 8px; border-radius: 10px; color: white; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);"
          >Eliminar</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>
<br />
<div style="display: flex; justify-content: space-between; align-items: center; padding: 10px;">
  <button class="btn btn-success" type="submit" id="comprar" style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);">Comprar</button>
  <button class="btn btn-warning" id="vaciar" style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);">Vaciar Carrito</button>
</div>